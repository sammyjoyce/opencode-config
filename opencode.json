{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": true,
  "share": "disabled",
  "model": "anthropic/claude-sonnet-4-20250514",
  "keybinds": {
    "leader": "ctrl+x"
  },
  "permission": {},
  "instructions": ["AGENTS.md", "rules/*.md"],
  "agent": {
    "build": {
      "temperature": 1.0,
      "prompt": "{file:./prompts/build.txt}"
    },
    "codebase-search": {
      "description": "Finds files relevant to queries using efficient search tools",
      "mode": "subagent",
  "model": "anthropic/claude-sonnet-4-20250514",
      "prompt": "{file:./prompts/codebase-search.txt}",
      "temperature": 1.0,
      "tools": {
        "grep": true,
        "read": true,
        "list": true,
        "glob": true,
        "write": false,
        "edit": false,
        "bash": false,
        "patch": false,
        "webfetch": false
      }
    },
    "oracle": {
      "description": "Expert AI advisor for advanced reasoning, technical guidance, code reviews and architectural advice",
      "mode": "subagent",
      "model": "anthropic/claude-opus-4-1-20250805",
      "prompt": "{file:./prompts/oracle.txt}",
      "temperature": 1.0
    }
  },
  "mcp": {
    "deep-wiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/sse",
      "enabled": true
    },
    "kit-mcp": {
      "type": "local",
      "command": ["/opt/homebrew/bin/python3.11", "-m", "kit.mcp"],
      "environment": {
        "KIT_MCP_LOG_LEVEL": "INFO"
      },
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["bunx", "@playwright/mcp@latest"],
      "enabled": true
    }
  },
  "formatter": {
    "zig": {
      "command": ["zlint", "$FILE"],
      "extensions": [".zig", ".zon"]
    }
  },
  "provider": {
    "anthropic": {
      "models": {
        "claude-sonnet-4-20250514": {

          "options": {
            "temperature": 0.7,
            "thinking": {
              "type": "enabled",
              "budgetTokens": 20000
            }
          }
        },
        "claude-opus-4-20250514": {
          "options": {
            "temperature": 0.7,
            "thinking": {
              "type": "enabled",
              "budgetTokens": 20000
            }
          }
        }
      }
    },
    "openai": {
      "models": {
        "o3": {
          "options": {
            "temperature": 0.7,
            "reasoningEffort": "medium"
          }
        },
        "gpt-5": {
          "options": {
            "temperature": 0.7,
            "reasoningEffort": "medium",
            "textVerbosity": "medium",
            "reasoningSummary": "auto",
            "include": ["reasoning.encrypted_content"]
          }
        }
      }
    },
    "vertex-qwen": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Vertex AI Qwen",
      "options": {
        "baseURL": "https://us-south1-aiplatform.googleapis.com/v1/projects/{env:PROJECT_ID}/locations/us-south1/endpoints/openapi",
        "headers": {
          "Authorization": "Bearer {env:GCLOUD_ACCESS_TOKEN}"
        }
      },
      "models": {
        "qwen/qwen3-coder-480b-a35b-instruct-maas": {
          "name": "Qwen3 Coder 480B",
          "max_retries": 100
        }
      }
    }
  }
}
